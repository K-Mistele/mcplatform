{
    "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
    "files": {
        "includes": [
            "**",
            "!**/node_modules/**",
            "!node_modules",
            "!specifications",
            "!.sst",
            "!.claude",
            "!node_modules"
        ]
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "lineWidth": 120,
            "indentWidth": 4,
            "indentStyle": "space",
            "lineEnding": "lf",
            "trailingCommas": "none",
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        },
        "linter": {
            "enabled": true
        }
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 120,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "noForEach": "off",
                "noBannedTypes": "off"
            },
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off",
                "noAssignInExpressions": "off",
                "noArrayIndexKey": "off"
            },
            "style": {
                "useTemplate": "off",
                "noNonNullAssertion": "off",
                "noUnusedTemplateLiteral": "off",
                "noUselessElse": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "noAutofocus": "off",
                "useKeyWithClickEvents": "off",
                "noLabelWithoutControl": "off",
                "useAltText": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off",
                "noEmptyPattern": "off"
            },
            "performance": {
                "noImgElement": "off"
            }
        }
    }
}